                    { type: 'sub_visual', text: "5 balon vardÄ±, 3 tanesi patladÄ±.", sub: "Balonlara tÄ±kla ve patlat!", item: 'ðŸŽˆ', brokenItem: 'ðŸ’¥', start: 5, remove: 3 },
                    { type: 'sub_visual', text: "7 kurabiye vardÄ±, 2 tanesini yedik.", sub: "Yenen kurabiyelere tÄ±kla.", item: 'ðŸª', brokenItem: 'ðŸ˜‹', start: 7, remove: 2 },
                    { type: 'sub_visual', text: "4 dondurma vardÄ±, 1 tanesi eridi.", sub: "Eriyen dondurmaya tÄ±kla.", item: 'ðŸ¦', brokenItem: 'ðŸ« ', start: 4, remove: 1 }
                ]
            },
            {
                id: 'zero_concept',
                title: 'SÄ±fÄ±rÄ±n Etkisi',
                icon: 'fa-genderless',
                questions: [
                    { type: 'add_visual', text: "Sepette 3 muz var. 0 (hiÃ§) muz ekle.", sub: "HiÃ§bir ÅŸeye dokunmadan Tamam'a bas.", item: 'ðŸŒ', start: 3, add: 0 },
                    { type: 'sub_visual', text: "4 araba var. 0 tanesi gitti (hiÃ§ gitmedi).", sub: "HiÃ§bir ÅŸeye dokunmadan Tamam'a bas.", item: 'ðŸš—', brokenItem: 'ðŸ’¨', start: 4, remove: 0 },
                    { type: 'sub_visual', text: "3 topun var. 3'Ã¼ de patladÄ±! (Hepsini Ã§Ä±kar)", sub: "Hepsine tÄ±kla.", item: 'âš½', brokenItem: 'ðŸ’¥', start: 3, remove: 3 } // Kalan 0 durumu
